@using Kryptos.Web.Client.Models.HammingCode

<div class="w-full px-8 py-4 mx-auto rounded-lg shadow-md bg-emerald-500">
    @if (Result.ErrorPosition > 0)
    {
        <div class="mt-2">
            <p class="text-2xl font-bold text-gray-700 dark:text-white text-underline">
                Error detected!
            </p>
        </div>

        <div class="mt-2 font-mono text-xl">
            @for (int i = 0; i < Result.OriginalSequence.Count; i++)
            {
                @if (Result.ErrorPosition - 1 != i)
                {
                    <span class="p-1">@Result.OriginalSequence[i]</span>
                }
                else
                {
                    <span class="text-red-500 p-1">@Result.OriginalSequence[i]</span>
                }
            }
        </div>
        
        <div class="mt-2">
            <p class="text-2xl font-bold text-gray-700 dark:text-white text-underline">
                Corrected
            </p>
        </div>
        
        <div class="mt-2 font-mono text-xl">
            @for (int i = 0; i < Result.FixedSequence.Count; i++)
            {
                @if (Result.ErrorPosition - 1 != i)
                {
                    <span class="p-1">@Result.FixedSequence[i]</span>
                }
                else
                {
                    <span class="text-green-800 p-1">@Result.FixedSequence[i]</span>
                }
            }
        </div>
    }
    else
    {
        <div class="mt-2">
            <p class="text-2xl font-bold text-gray-700 dark:text-white text-underline">
                No errors detected!
            </p>
        </div>
    }
</div>

@code {

    [Parameter]
    public DecodingResult Result { get; set; }

}