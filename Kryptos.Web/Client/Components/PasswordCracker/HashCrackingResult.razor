@using Kryptos.Web.Shared.Models

@if (Result.ErrorMessage == null)
{
    <div class="max-w-2xl px-8 py-4 mx-auto bg-white rounded-lg shadow-md dark:bg-gray-900">
        <div class="mt-2">
            <p class="text-2xl font-bold text-gray-700 dark:text-white text-center">
                @Result.Password
            </p>
        </div>

        <div class="flex items-center justify-between mt-4">
            <p class="text-gray-400 font-bold">
                @Result.WordCount @(Result.WordCount == 1 ? "word" : "words")
            </p>
            <p class="text-gray-400 font-bold">@Result.TotalTime</p>
        </div>
    </div>
}
else
{
    <div class="max-w-2xl px-8 py-4 mx-auto bg-red-500 rounded-lg shadow-md dark:bg-red-500">
        <div class="mt-2">
            <p class="text-2xl font-bold text-gray-700 dark:text-white text-center">
                @Result.ErrorMessage
            </p>
        </div>
    </div>
}

@code {

    [Parameter]
    public CrackingResult Result { get; set; }
}